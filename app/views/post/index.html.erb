<%# 게시판 영역 %>

<div class="container">
<%= link_to "/post/index?school=#{params[:school]}&menu=#{params[:menu]}" do%>
    <h1><%=@school%> <%=@menu%></h1>
<%end%>
	<div>
		<div class="" style="width:300px; height:300px;"> 
			<ul class="bxslider" id="bxslider"> 
				<li><img class="img-rounded" src="http://kinimage.naver.net/20171024_73/1508836721070jKYBl_JPEG/profile.jpg?type=f130_130" width="100%" height="100%"> </li> 
				<li><img class="img-rounded" src="http://kinimage.naver.net/20171024_73/1508836721070jKYBl_JPEG/profile.jpg?type=f130_130" width="100%" height="100%"> </li> 
				<li><img class="img-rounded" src="http://kinimage.naver.net/20171024_73/1508836721070jKYBl_JPEG/profile.jpg?type=f130_130" width="100%" height="100%"> </li> 
			
			</ul> 
		</div> 
		<div class="" id="slider-pager">
		<br>
			<ul> 
				<a data-slide-index="0" href="" onfocus="this.blur();" class="active">●</a>
				<a data-slide-index="1" href="" onfocus="this.blur();" class="">●</a>
				<a data-slide-index="2" href="" onfocus="this.blur();" class="">●</a>
			</ul> 
		</div> 

	</div>

<br>
<div style="text-align:right;">
	<%=link_to post_new_path(school: @school, menu: @menu) do%>
		<button type="button" class="btn btn-info">글쓰기
			<span class="glyphicon glyphicon-pencil">
		</button>
	<%end%>
</div>
</div>
<div class="row">
	<% @posts.each do |p| %>
	<div class="col-md-4">
		<a href=""> <!-- 클릭 시 링크 설정 -->
			<div class="card">
				<!-- 카드 헤더 -->
				<div class="card-header">

					<div class = "card-header-is_closed" > 

						<div class = "card-header-text" > 모집중 </div > 

						<div class = "card-header-number" > 2 / 5 </div > 
					</div >
				</div>

				<!--  카드 바디 -->

				<div class="card-body">

					<!--  카드 바디 헤더 -->

					<div class="card-body-header">

						<h1> <%= p.title%></h1>

						<p class="card-body-hashtag">#여수 #순천 #광양</p>

						<p class = "card-body-nickname"> 

										작성자: <%=User.find(p.user_id).name%>

								</p>

					</div>

					<p class="card-body-description">

						<%= p.content%> 

					</p>
					<!--  카드 바디 본문 -->

					<!--  카드 바디 푸터 -->

					<div class="card-body-footer">

						<hr style="margin-bottom: 8px; opacity: 0.5; border-color: #EF5A31">
						<span class="glyphicon glyphicon-eye-open"> 38회

						<span class="glyphicon glyphicon-comment"> 4개

						<span class="glyphicon glyphicon-calendar"> 2018/04/12 

					</div>
				</div>
			</div>

		</a>
	</div>
	<%end%>
</div>
