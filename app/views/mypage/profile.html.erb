<%=render 'layouts/header' %>
<div class="container content">
	<div class="row" style="margin-top: 1em">
		<%= render 'layouts/sidebar' %>
		<div class="col-md-9">
			<div class="row">
				<div class="col-md-12">
					<form class="form-horizontal" method="post" id="signupForm" novalidate="novalidate">
						<div class="container">
							<h1>
								<img class="img-circle" src="<%=current_user.image.url%>" style="width:100px; height: 100px">
								<%=current_user.name%>
							</h1>
						</div>
						<div style="margin-top:1em"></div>
					</form>
					<%= form_tag '/mypage/editprofile', method: 'post', multipart: true do %>
						<%= file_field_tag 'image' %><br> 
						<%= submit_tag  '수정하기' %> 
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
