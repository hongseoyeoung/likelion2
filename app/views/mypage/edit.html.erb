<%=render 'layouts/header' %>
<div class="container content">
	<div class="row" style="margin-top: 1em">
		<%= render 'layouts/sidebar' %>
		<div class="col-md-9">
			<div class="row">
				<div class="col-md-12">
					<form class="form-horizontal" method="post" id="signupForm" novalidate="novalidate">
						<div class="container">
							<h1>
								<%=render 'layouts/my_info'%>
							</h1>
						</div>
						<div style="margin-top:1em"></div>
						<input type="hidden" name="postkey" value="F78B14F5B0">
						<div class = "form-group">
							<label class="col-md-2 control-label" for="user_id">이메일</label>
							<div class="col-md-4">
								<input class="form-control" value="<%=current_user.email%>" disabled>
							</div>
						</div>
						<div class = "form-group">
							<label class="col-md-2 control-label" for="user_id" id = "password">비밀번호</label>
							<div class="col-md-4">
								<input type="password" class="form-control" value="">
							</div>
						</div>
						<div class = "form-group">
							<label class="col-md-2 control-label" for="user_id" id = "passwordconfirm">비밀번호 확인</label>
							<div class="col-md-4">
								<input type="password" class="form-control" value="">
							</div>
						</div>
						<div class="row" style="padding-left:25%">
        					<%=link_to '/mypage/modify', :data => {:confirm => '수정 하시겠습니까?'}, method: :get do %>
        						<button class="btn btn-default">비밀 번호 수정</button>
    						<%end%>		
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>