    <img src="dowon.png" style="width: 100%; height: 300px">
</div> <br><br> %>




<%# 메뉴 레이아웃 %>
<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
  <select id="schoolName" class="form-control" onchange="getChangeSelect();">
        <option value="nodata">위치를 선택하세요.</option>
        <option value="조선대">조선대</option>
        <option value="전남대">전남대</option>
    </select></div>
  <div class="col-md-4"></div>
</div><br><br\>

<div class="container">
    <div class="row">
        <%for i in 0..5%>
            <div class="col-md-4">
                <div class="card">
                <%# 링크투로 학교와 메뉴의 파라미터를 보내야함. %>
                    <%=link_to "javascript:callData(\"#{@arr[i]}\")" do %>
                    <img src="<%= @sazin[i] %>.png" alt="#{@sazin}" style="width:100%">
                    <%end%>
                        <div class="container">
                        <h4><b><%= @arr[i] %></b></h4> 
                        </div>
                    </div>
                </div>
        <%end%>  
    </div>
</div>
<script>

    // index->게시판으로 이동
    function callData(menuIndex)
    {   
        var target = document.getElementById("schoolName");
        school = target.options[target.selectedIndex].value;
        if(school=="nodata") 
        {
            alert("위치를 선택해주세요!");
            return;
        }
        location.href="post/index?school="+school+"&menu="+menuIndex;
    }

</script>