<link href="http://somewebsite.com/css/bootstrap.css" rel="stylesheet">
<link href="http://somewebsite.com/css/bootstrap.min.css" rel="stylesheet">
<link href="index.scss" rel="stylesheet">

<div class="login">
  <h2>Log in</h2>

  <div>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div><a class="ID">아이디</a>
        <%= f.text_field :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
      </div>
      <div class="inputs"><a class="PW">비밀번호</a>
          <%= f.password_field :password,
                required: false,
                input_html: { autocomplete: "current-password" }%>
      </div>
      <div class="remember-me">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>

    <div class="form-actions">
     <%= f.button :submit, "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links", class: "login" %>
</div>
</div>