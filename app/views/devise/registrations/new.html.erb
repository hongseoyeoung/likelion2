<div class="container" style="align-content: center;">

<h2 style="padding-left: 250px;">회원가입</h2><br><br>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
     <div class="field" style="padding-left: 230px;">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div><br>

    
    <div class="btn-group" data-toggle="buttons" style="padding-left: 230px;">
      <%= f.label :성별 %><br>
        <%= f.label :남자 %>
          <%= f.radio_button :gender, '남자', :checked => true %> 
        <%= f.label :여자 %>
        <%= f.radio_button :gender, '여자', :checked => true%> 
    </div><br>
  <div class="form-inputs">
    <%= f.input :email, class: "form-control",
                required: true,
                autofocus: true ,
                input_html: { autocomplete: "email" }%><br>
    <%= f.input :password,
                required: true,
                placehold: "#{@minimum_password_length}자 이상 입력해주세요",
                input_html: { autocomplete: "new-password" } %><br>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %><br>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
  
<% end %>
</div>